<header>
  <img class="logo" src="facelad-logo.png" alt="Facelad Logo" />
  <nav>
    <button id="theme-toggle" aria-label="Cambiar tema">
      <span class="material-icons">dark_mode</span>
    </button>
    <button id="lang-toggle" aria-label="Cambiar idioma">
      <span class="material-icons">translate</span>
    </button>
    <a href="https://github.com/example/repo" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
      <span class="material-icons">code</span>
    </a>
  </nav>
</header>

<script>
  const themeToggle = document.getElementById("theme-toggle");
  const langToggle = document.getElementById("lang-toggle");

  themeToggle.addEventListener("click", () => {
    document.body.classList.toggle("dark-mode");
    const icon = themeToggle.querySelector(".material-icons");
    icon.textContent = icon.textContent === "dark_mode" ? "light_mode" : "dark_mode";
  });

  langToggle.addEventListener("click", () => {
    // Here you would typically implement actual language switching logic
    console.log("Language toggle clicked");
  });
</script>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: var(--header-bg);
    color: var(--text-color);
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    height: 60px; /* Set a fixed height for the header */
    box-sizing: border-box;
  }

  .logo {
    height: 40px;
    width: auto;
  }

  nav {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  button,
  a {
    background: none;
    border: none;
    color: var(--facelad-primary);
    cursor: pointer;
    font-size: 1rem;
    padding: 0.5rem;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  button:hover,
  a:hover {
    color: var(--facelad-secondary);
  }

  .material-icons {
    font-size: 24px;
  }

  @media (max-width: 480px) {
    header {
      padding: 0.5rem;
      height: 50px; /* Slightly smaller height for mobile */
    }

    .logo img {
      height: 30px;
    }

    nav {
      gap: 0.5rem;
    }

    button,
    a {
      padding: 0.3rem;
    }

    .material-icons {
      font-size: 20px;
    }
  }
</style>
