---
interface Props {
  href: string;
  title: string;
  icon: string;
}

const { href, title, icon } = Astro.props;
---

<li class="link-card">
  <a href={href} target="_blank" rel="noopener noreferrer">
    <span class="icon">
      <i class={`fas fa-${icon}`}></i>
    </span>
    <span class="title">{title}</span>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: var(--bg-color);
    border-radius: 8px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px var(--facelad-secondary);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 0.8rem 1rem;
    border-radius: 8px;
    color: var(--facelad-primary);
    background-color: var(--bg-color);
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
  }
  .icon {
    margin-right: 0.8rem;
    font-size: 1.2rem;
    width: 24px;
    text-align: center;
  }
  .title {
    font-size: 1rem;
  }
  .link-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 8px var(--bg-color);
  }
  .link-card:hover a {
    background-color: var(--facelad-secondary);
    color: var(--facelad-primary);
  }
  @media (max-width: 480px) {
    .link-card > a {
      padding: 0.7rem 0.9rem;
    }
    .icon {
      font-size: 1rem;
      width: 20px;
    }
    .title {
      font-size: 0.9rem;
    }
  }
</style>
